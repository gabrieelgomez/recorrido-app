<div id="<%= dom_id company %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Nombre:</strong>
    <%= company.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Mostrar", company, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Editar', edit_company_path(company), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
